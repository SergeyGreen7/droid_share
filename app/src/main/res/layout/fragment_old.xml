<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            class="com.example.droid_share.grid.DeviceGridView"
            android:id="@+id/recycler_list_of"
            android:layout_width="match_parent"
            android:layout_height="400dp">
        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_connect_of"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/connect_peer_button"
                android:visibility="visible" />
            <Button
                android:id="@+id/btn_send_file_of"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/get_file_button"
                android:visibility="visible" />
        </LinearLayout>
        <TextView
            android:id="@+id/device_address_of"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="device_address ... "/>
        <TextView
            android:id="@+id/device_info_of"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="device_info ... "/>
        <TextView
            android:id="@+id/group_owner_of"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="group_owner ... " />
        <TextView
            android:id="@+id/group_ip_of"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="group_ip ... "  />
        <LinearLayout
            android:id="@+id/status_bar_of"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_height="37dp"
            android:layout_marginBottom="3dp">
            <TextView
                android:id="@+id/status_text_of"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textColor="@android:color/white"
                android:text="status_text"
                android:gravity="left">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>